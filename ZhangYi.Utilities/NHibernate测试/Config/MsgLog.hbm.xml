<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2"
   assembly="NHibernate测试"
   namespace="NHibernate测试.Models">

  <class name ="MsgLog" table="Bus_MsgLog">
    <!-- A 32 hex character is our surrogate key. It's automatically
            generated by NHibernate with the UUID pattern. -->
    <id name="ID" column="ID" type="Int32" unsaved-value="0">
      <generator class="identity" />
    </id>

    <property name="fromUser" column="fromUser" type="String" length="50" not-null="true"/>
    <property name="toUser" column="toUser" type="String" length="50" not-null="false"/>
    <property name="InfoID" column="InfoID" type="Int32" not-null="false"/>
    <property name="msg" column="msg" type="String" length="100" not-null="false"/>
    <property name="CreteTime" column="CreteTime" type="DateTime" not-null="false"/>
  </class>
</hibernate-mapping>